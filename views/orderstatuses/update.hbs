{{#extends "base"}}
{{#block "content"}}
<h1>Updating {{comment.user.username}} comments for {{comment.news.title}}</h1>
<form method="POST">
    <input type="hidden" name="_csrf" value="{{csrfToken}}"/>
    {{{form}}}
    
    <a class="btn btn-danger mt-3" href="/admin/comments">Cancel</a>
    <input type="submit" value="Update Review" class="btn btn-primary mt-3"/>
</form>
{{/block}}


{{/extends}}