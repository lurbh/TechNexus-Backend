{{#extends "base"}}


{{#block "content"}}
<h1>All News Article</h1>

<table class="table">
    <thead>
        <th>
            News Article ID
        </th>
        <th>
            Title
        </th>
        <th>
            Author
        </th>
        <th>
            Publication Date
        </th>
        <th></th>
        <th></th>
    </thead>
    {{#each news}}
    <tr>
        <td>
            {{this.id}}
        </td>
        <td>
            {{this.title}}
        </td>
        <td>
            {{this.user.username}}
        </td>
        <td>
            {{#dateFormat this.publication_date}}
                {{date}} {{time}} 
            {{/dateFormat}}
        </td>
        <td>
            <a href="news/update-new-article/{{this.id}}"
               class="btn btn-warning btn-sm">Update</a>
        </td>
        <td>
            <a href="news/delete-new-article/{{this.id}}"
               class="btn btn-danger btn-sm">Delete</a>
        </td>
    </tr>
    {{/each}}
</table>
<a class="btn btn-info btn-sm" href="news/add-new-article">Add News Article</a>
{{/block}}

{{/extends}}