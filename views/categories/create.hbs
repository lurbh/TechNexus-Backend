{{#extends "base"}}

{{#block "content"}}
<h1>Create New Category</h1>
<form method="POST">
    <input type="hidden" name="_csrf" value="{{csrfToken}}"/>
    {{{form}}}
    <div class="mt-3">
        <label class="fw-bold">Image: </label>
        <a href="#" class="btn btn-primary" id="upload_widget">Upload</a>
        <img src="" class="img-fluid rounded mt-2" style="display:none" id="uploaded_image" />
    </div>
    <a class="btn btn-danger mt-3" href="/admin/categories">Cancel</a>
    <input type="submit" class="btn btn-primary mt-3" value="Add Category"/>
</form>
{{/block}}

{{#block 'js'}}
<script src="https://cdnjs.cloudflare.com/ajax/libs/axios/1.6.8/axios.min.js" integrity="sha512-PJa3oQSLWRB7wHZ7GQ/g+qyv6r4mbuhmiDb8BjSFZ8NZ2a42oTtAq5n0ucWAwcQDlikAtkub+tPVCw4np27WCg==" crossorigin="anonymous"></script>
<script src="https://widget.cloudinary.com/v2.0/global/all.js" type="text/javascript"></script>

<script>
    async function generateSignature(callback, params_to_sign) {
        const response  = await axios.get('/cloudinary/sign', {
            params: {
                params_to_sign
            }
        });
        callback(response.data);
    }

    const widget = cloudinary.createUploadWidget({
        cloudName: "{{cloudinaryName}}",
        apiKey: "{{cloudinaryApiKey}}",
        uploadPreset: "{{cloudinaryPreset}}",
        uploadSignature: generateSignature
    }, function(err, result){
        if (!err && result && result.event =="success") {
            document.querySelector("#id_image_url").value = result.info.url;
            console.log(result.info.url);
            const uploadedImage = document.querySelector("#uploaded_image");
            uploadedImage.style.display = "block";
            uploadedImage.src = result.info.thumbnail_url;
        }
    });

    document.getElementById("upload_widget").addEventListener("click", function(){
        widget.open();
    }, false);
</script>

{{/block}}

{{/extends}}