{{#extends "base"}}

  {{#block "content"}}
    <form method="POST">
      <input type="hidden" name="_csrf" value="{{csrfToken}}" />
      <div class="alert alert-danger">
        Are you sure you want to delete
        {{review.user.username}}
        review for
        {{review.products.product_name}}
        <div>
          <a class="btn btn-success btn-sm" href="/admin/reviews">Cancel</a>
          <input value="Confirm" type="submit" class="btn btn-danger btn-sm" />
        </div>
      </div>
    </form>
  {{/block}}

{{/extends}}