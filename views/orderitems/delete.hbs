{{#extends "base"}}

{{#block "content"}}
<form method="POST">
    <input type="hidden" name="_csrf" value="{{csrfToken}}"/>
    <div class="alert alert-danger">
        Are you sure you want to delete Order ID {{orderitem.order.id}} Item for {{orderitem.product.product_name}}
        <div>
            <a class="btn btn-success btn-sm" href="/admin/orderitems">Cancel</a>
            <input value="Confirm" type="submit" class="btn btn-danger btn-sm"/>
        </div>
    </div>
</form>
{{/block}}

{{/extends}}